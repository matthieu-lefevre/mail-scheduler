<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xmlns:task="http://www.springframework.org/schema/task"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans schema/spring-beans-4.0.xsd
            http://www.springframework.org/schema/batch schema/spring-batch-3.0.xsd
            http://www.springframework.org/schema/task schema/spring-task-4.0.xsd">

    <import resource="classpath:application-context.xml" />

    <bean id="databaseReportReader" class="com.mlefevre.scheduler.mail.batch.DatabaseReportReader" />
    <bean id="reportProcessor" class="com.mlefevre.scheduler.mail.batch.ReportProcessor" />
    <bean id="mailReportWriter" class="com.mlefevre.scheduler.mail.batch.MailReportWriter" />

    <batch:job id="job">
        <batch:step id="step1">
            <batch:tasklet>
                <batch:chunk reader="databaseReportReader" processor="reportProcessor" writer="mailReportWriter" commit-interval="10" />
            </batch:tasklet>
        </batch:step>
    </batch:job>


    <bean id="mailScheduler" class="com.mlefevre.scheduler.mail.batch.MailScheduler" />

    <task:scheduled-tasks>
        <task:scheduled ref="mailScheduler" method="run" cron="0 49 23 * * *" />
    </task:scheduled-tasks>

</beans>